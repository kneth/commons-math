{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist",
        "sourceRoot": "src",
        "preserveSymlinks": true
    },
    "include": [
        "src/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}